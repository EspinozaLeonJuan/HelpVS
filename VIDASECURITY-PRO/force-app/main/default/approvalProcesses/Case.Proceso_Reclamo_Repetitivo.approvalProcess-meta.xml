<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Instancia_del_Reclamo__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>mpereira@security.cl</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Instancia_del_Reclamo__c</field>
                <operation>equals</operation>
                <value>Segunda</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Segunda Instacia</label>
        <name>Segunda_Instacia</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>margarita.rengifo@security.cl</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Tercera o  Más Instancia, o Dda</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Instancia_del_Reclamo__c</field>
                <operation>equals</operation>
                <value>Tercera o Más,Dda</value>
            </criteriaItems>
        </entryCriteria>
        <label>Tercera o  Más Instancia, o Dda</label>
        <name>Tercera_o_M_s_Instancia_o_Dda</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Plantillas_Soporte/Aviso_Solicitud_Aprobacion</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Reclamos</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Instancia_del_Reclamo__c</field>
            <operation>notEqual</operation>
            <value>Primera</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Aprobado_Reclamo__c</field>
            <operation>equals</operation>
            <value>Falso</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Anular_aprobacion_reclamo_repetitivo__c</field>
            <operation>equals</operation>
            <value>Verdadero</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Actualiza_Aprobado_SI</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Estado_Aprobacion</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Actualiza_Aprobado_NO</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Estado_Aprobacion</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Proceso Reclamo Repetitivo</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Actualiza_Aprobado_NO</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
