            <name>Alerta_notificacion_de_incorporacion</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Esta regla se ejecuta cuando se destilda la casilla Ausente del objeto Usuario.</description>
        <formula>AND(NOT(ISNEW()), 
Ausente__c = FALSE, 
ISCHANGED(Ausente__c))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
