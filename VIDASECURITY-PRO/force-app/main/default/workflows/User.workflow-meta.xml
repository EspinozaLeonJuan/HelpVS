    <rules>
        <fullName>Notificacion de ausencia</fullName>
        <actions>
            <name>Alerta_notificacion_de_ausencia</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>User.Ausente__c</field>
            <operation>equals</operation>
            <value>Verdadero</value>
        </criteriaItems>
        <description>Esta regla se ejecuta cuando se tilda la casilla Ausente del objeto Usuario</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Notificacion de incorporacion</fullName>
